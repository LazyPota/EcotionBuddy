<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Widget.App.InfoButton" parent="Widget.Material3.Button.IconButton">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearance.App.Circle</item>
        <item name="android:minWidth">32dp</item>
        <item name="android:minHeight">32dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="iconSize">18dp</item> <!-- Sesuaikan ukuran ikon/teks di dalam -->
        <item name="android:textSize">14sp</item> <!-- Jika menggunakan teks -->
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnPrimaryContainer</item>
        <item name="backgroundTint">@android:color/transparent</item> <!-- Atau warna lain -->
        <!-- Jika ingin border -->
        <!-- <item name="strokeColor">?attr/colorOnPrimaryContainer</item> -->
        <!-- <item name="strokeWidth">1dp</item> -->
    </style>

    <style name="ShapeAppearance.App.Circle" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item> <!-- Ini yang membuatnya bulat -->
    </style>
    <style name="Theme.EcotionBuddy" parent="Theme.Material3.DayNight.NoActionBar">

        <item name="colorPrimary">@color/green_primary_light</item>
        <item name="colorOnPrimary">@color/green_on_primary_light</item>
        <item name="colorPrimaryContainer">@color/green_primary_container_light</item>
        <item name="colorOnPrimaryContainer">@color/green_on_primary_container_light</item>

        <item name="colorSecondary">@color/green_secondary_light</item>
        <item name="colorOnSecondary">@color/green_on_secondary_light</item>
        <item name="colorSecondaryContainer">@color/green_secondary_container_light</item>
        <item name="colorOnSecondaryContainer">@color/green_on_secondary_container_light</item>

        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorOnBackground">@color/on_background_light</item>
        <item name="colorSurface">@color/surface_light</item>
        <item name="colorOnSurface">@color/on_surface_light</item>
        <item name="colorSurfaceVariant">@color/surface_variant_light</item>
        <item name="colorOnSurfaceVariant">@color/on_surface_variant_light</item>

        <item name="colorOutline">@color/outline_light</item>

        <item name="android:statusBarColor">?attr/colorSurface</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>